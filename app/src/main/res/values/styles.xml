<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <!--Text Styles-->
    <style name="AppTheme.TextStyle.Heading" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.TextStyle.Title" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.TextStyle.Title.DarkGray" parent="AppTheme.TextStyle.Title">
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="AppTheme.TextStyle.SubTitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.TextStyle.SubTitle.DarkGray" parent="AppTheme.TextStyle.SubTitle">
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="AppTheme.TextStyle.SubTitle.LightGray" parent="AppTheme.TextStyle.SubTitle">
        <item name="android:textColor">@color/colorLightGray</item>
    </style>

    <style name="AppTheme.TextStyle.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.TextStyle.Body.LightGray" parent="AppTheme.TextStyle.Body">
        <item name="android:textColor">@color/colorLightGray</item>
    </style>

    <style name="AppTheme.TextStyle.Body.DarkGray" parent="AppTheme.TextStyle.Body">
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="AppTheme.TextStyle.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.TextStyle.Caption.LightGray" parent="AppTheme.TextStyle.Caption">
        <item name="android:textColor">@color/colorLightGray</item>
    </style>

    <style name="AppTheme.TextStyle.Caption.DarkGray" parent="AppTheme.TextStyle.Caption">
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <!--EditText Styles-->
    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textAppearance">@style/AppTheme.TextStyle.Title</item>
        <item name="hintTextColor">@color/colorTextDarkGray</item>
    </style>

    <style name="AppTheme.EditText.MultiLine" parent="AppTheme.EditText">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">start</item>
        <item name="hintTextColor">@color/colorTextDarkGray</item>
    </style>

    <!--Material Chips Styles-->
    <style name="AppTheme.MaterialChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="textEndPadding">@dimen/_8</item>
        <item name="textStartPadding">@dimen/_8</item>
        <item name="android:textAppearance">@style/AppTheme.TextStyle.SubTitle</item>
        <item name="chipStrokeWidth">1.5dp</item>
        <item name="chipBackgroundColor">@color/colorLightGray</item>
        <item name="chipStrokeColor">@color/color_chips_stroke</item>
    </style>
</resources>