<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/colorBackground</item>
    </style>

    <!--Text Styles-->
    <style name="AppTheme.TextStyle.Heading" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.TextStyle.Title" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.TextStyle.SubTitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.TextStyle.SubTitle.DarkGray" parent="AppTheme.TextStyle.SubTitle">
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="AppTheme.TextStyle.SubTitle.LightGray" parent="AppTheme.TextStyle.SubTitle">
        <item name="android:textColor">@color/colorLightGray</item>
    </style>

    <style name="AppTheme.TextStyle.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.TextStyle.Body.LightGray" parent="AppTheme.TextStyle.Body">
        <item name="android:textColor">@color/colorLightGray</item>
    </style>

    <style name="AppTheme.TextStyle.Body.DarkGray" parent="AppTheme.TextStyle.Body">
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="AppTheme.TextStyle.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.TextStyle.Caption.LightGray" parent="AppTheme.TextStyle.Caption">
        <item name="android:textColor">@color/colorLightGray</item>
    </style>

    <style name="AppTheme.TextStyle.Caption.DarkGray" parent="AppTheme.TextStyle.Caption">
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <!--EditText Styles-->
    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="background">@null</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textAppearance">@style/AppTheme.TextStyle.SubTitle</item>
    </style>

</resources>